{{#if (gt self.property.length 0)}}

<h3 class="item__sub-heading">Map structure</h3>

<table class="item__parameters">
  <thead>
    <tr>
      <th scope="col"><span class="visually-hidden">{{self.type}} key </span>Name</th>
      <th scope="col"><span class="visually-hidden">{{self.type}} key </span>Description</th>
      <th scope="col"><span class="visually-hidden">{{self.type}} key </span>Type</th>
      <th scope="col"><span class="visually-hidden">{{self.type}} key </span>Value</th>
    </tr>
  </thead>

  <tbody>
    
    {{#each self.property}}
      <tr class="item__parameter">
        <th scope="row" data-label="name"><code>{{name}}</code></th>
        <td data-label="desc">{{{default description '&mdash;<span class="visually-hidden"> none</span>'}}}</td>
        <td data-label="type">
          <code>{{formatParamType type}}</code>
        </td>
        <td data-label="default">
          {{#if (not default)}}
            &mdash;<span class="visually-hidden"> none</span>
          {{else}}
            {{#if (and (gt (indexOf (lowercase type) 'color') -1) (chroma resolveValue 'isColor'))}}
              <code class="color-preview--inline" style="background: {{resolvedValue}}; color: {{chroma resolvedValue 'inverse' 'css'}};">{{default}}</code>
            {{else}}
              <code>{{default}}</code>
            {{/if}}
          {{/if}}
        </td>
      </tr>
    {{/each}}
    
  </tbody>
</table>

{{/if}}