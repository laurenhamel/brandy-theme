{{#if (gt self.example.length 0)}}

  <h3 class="item__sub-heading">Example</h3>

  {{#each self.example}}
    <div class="item__example  example">
      {{#if description}}
        <div class="example__description">{{{description}}}</div>
      {{/if}}
    <pre class="example__code language-{{type}}"><code class="js-autoindent">{{code}}</code></pre>
    </div>
  {{/each}}

{{/if}}